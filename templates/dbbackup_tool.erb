#!/bin/bash
/usr/bin/ktremotemgr sync -host localhost -port <%= scope.lookupvar('kyototycoon::port') -%> -cmd dbbackup
/usr/bin/find <%= scope.lookupvar('kyototycoon::backup_directory') -%> -maxdepth 1 -mindepth 1 -regex ".*[^bin]" -type d -mtime +<%= scope.lookupvar('kyototycoon::backup_retention') -%> -exec rm -fR {} \;
